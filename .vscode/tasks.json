{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure CMake",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        "${workspaceFolder}",
        "-B",
        "${workspaceFolder}/build",
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DCMAKE_CXX_STANDARD=23"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build WanjPlayer",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
        "--parallel",
        "$(nproc)"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "dependsOn": "Configure CMake",
      "dependsOrder": "sequence",
      "problemMatcher": "$gcc"
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "rm",
      "args": [
        "-rf",
        "${workspaceFolder}/build"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Rebuild WanjPlayer",
      "type": "shell",
      "command": "${workspaceFolder}/build.sh",
      "args": ["rebuild"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Run WanjPlayer",
      "type": "shell",
      "command": "${workspaceFolder}/build/WanjPlayer",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "dependsOn": "Build WanjPlayer",
      "dependsOrder": "sequence",
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Format Code",
      "type": "shell",
      "command": "find",
      "args": [
        "${workspaceFolder}/src",
        "${workspaceFolder}/include",
        "-name",
        "*.cpp",
        "-o",
        "-name",
        "*.hpp",
        "-exec",
        "clang-format",
        "-i",
        "--style=file",
        "{}",
        "+"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Analyze Code (clang-tidy)",
      "type": "shell",
      "command": "find",
      "args": [
        "${workspaceFolder}/src",
        "-name",
        "*.cpp",
        "-exec",
        "clang-tidy",
        "{}",
        "--config-file=${workspaceFolder}/.clang-tidy",
        "+"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "dependsOn": "Build WanjPlayer",
      "dependsOrder": "sequence",
      "problemMatcher": "$gcc"
    },
    {
      "label": "Update Compile Commands",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "cd ${workspaceFolder} && rm -f compile_commands.json && ln -s build/compile_commands.json ."
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "sudo",
      "args": [
        "apt",
        "install",
        "-y",
        "build-essential",
        "cmake",
        "clang",
        "clang-format",
        "clang-tidy",
        "libwxgtk3.2-dev",
        "libwxbase3.2-dev"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
